<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/md_keylines">

   <!-- <ImageView
        android:id="@+id/list_avatar"
        android:layout_width="@dimen/avator_size"
        android:layout_height="@dimen/avator_size"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_menu_camera" />
    -->
    <!--
   Event Name
   Event Description
   Event Created by
   Seats Remaining
    -->
    <TextView
        android:id="@+id/recyclerview_eventname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/md_keylines"
        android:text="Event Title"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/article_title" />

    <TextView
        android:id="@+id/recyclerview_eventtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_title"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Event Type"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/list_subheading" />
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapImageView"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        map:liteMode="true"
        map:mapType="normal"
        map:cameraZoom="15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recyclerview_username"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="Username"
            android:textSize="@dimen/list_subheading"/>

        <TextView
            android:id="@+id/recyclerview_seatsremaining"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Seats Remaining"
            android:textSize="@dimen/list_subheading"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>
</LinearLayout>