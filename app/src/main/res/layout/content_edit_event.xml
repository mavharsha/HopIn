<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:focusableInTouchMode="true"
    tools:context="sk.maverick.harsha.hopin.EditEvent"
    tools:showIn="@layout/create_event">

    <ProgressBar
        android:id="@+id/editevent_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/editevent_ipl_eventname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/editevent_eventname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Event Name"
                    android:maxLines="1"
                    android:theme="@style/MyEditTextTheme"
                    android:textColor="@color/wallet_secondary_text_holo_dark"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/editevent_ipl_eventtype"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/editevent_eventtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Event Type"
                    android:maxLines="1"
                    android:theme="@style/MyEditTextTheme"
                    android:textColor="@color/wallet_secondary_text_holo_dark"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Event Privacy"
                    android:textSize="18sp"
                    android:layout_weight="1" />

                <RadioGroup
                    android:id="@+id/editevent_radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/editevent_radioButton1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Public"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/editevent_radioButton2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Unlisted"
                        android:checked="false" />

                </RadioGroup>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="2dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/editevent_ipl_seatsavailable"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/editevent_seatsavailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seats Available"
                    android:maxLines="1"
                    android:theme="@style/MyEditTextTheme"
                    android:textColor="@color/wallet_secondary_text_holo_dark"
                    android:singleLine="true"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/editevent_tv_passpreference"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:textSize="18sp"
                    android:text="Passenger Preference"
                    android:layout_marginLeft="4dp" />

                <Spinner
                    android:id="@+id/editevent_passpreference"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wallet_secondary_text_holo_dark"
                    android:layout_weight="3" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/editevent_ipl_eventdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7">

                    <EditText
                        android:id="@+id/editevent_eventdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Event Date"
                        android:inputType="date"
                        android:theme="@style/MyEditTextTheme"
                        android:textColor="@color/wallet_secondary_text_holo_dark"
                        android:maxLines="1"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/editevent_datedialog"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="3"
                    android:textSize="10sp"
                    android:text="Date Dialog"
                    android:background="@color/colorAccent"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/editevent_ipl_eventtime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7">

                    <EditText
                        android:id="@+id/editevent_eventtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Event up Time"
                        android:inputType="time"
                        android:theme="@style/MyEditTextTheme"
                        android:textColor="@color/wallet_secondary_text_holo_dark"
                        android:maxLines="1"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/editevent_eventtimedialog"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="3"
                    android:textSize="10sp"
                    android:text="Time Dialog"
                    android:textColor="@color/white"
                    android:background="@color/colorAccent" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/editevent_ipl_eventlocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7">

                    <EditText
                        android:id="@+id/editevent_eventlocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        android:hint="Event Location"
                        android:maxLines="1"
                        android:theme="@style/MyEditTextTheme"
                        android:textColor="@color/wallet_secondary_text_holo_dark"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/editevent_eventlocationpicker"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="3"
                    android:textSize="10sp"
                    android:text="Location Picker"
                    android:background="@color/colorAccent"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/editevent_ipl_pickuptime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7">

                    <EditText
                        android:id="@+id/editevent_pickuptime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Pick up Time"
                        android:inputType="time"
                        android:maxLines="1"
                        android:theme="@style/MyEditTextTheme"
                        android:textColor="@color/wallet_secondary_text_holo_dark"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/editevent_pickuptimedialog"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="3"
                    android:textSize="10sp"
                    android:text="Time Dialog"
                    android:background="@color/colorAccent"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/editevent_ipl_pickuplocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7">

                    <EditText
                        android:id="@+id/editevent_pickuplocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        android:hint="Pick up Location"
                        android:maxLines="1"
                        android:theme="@style/MyEditTextTheme"
                        android:textColor="@color/wallet_secondary_text_holo_dark"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/editevent_pickuplocationpicker"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="3"
                    android:textSize="10sp"
                    android:text="Location Picker"
                    android:textColor="@color/white"
                    android:background="@color/colorAccent" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp" />
            <LinearLayout
                android:id="@+id/editevent_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/editevent_addview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/ic_add_view_circle" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="18sp"
                    android:textColor="@color/wallet_secondary_text_holo_dark"
                    android:text="Click to add another Pickup Location" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp" />


            <Button
                android:id="@+id/editevent_confirm"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Save"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>
</FrameLayout>
